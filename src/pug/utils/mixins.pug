mixin grid-bg-lines
  .container-lines__row
    .container-lines__column
    .container-lines__column
    .container-lines__column

mixin btn(href, text)
  a.btn(href=href)=text

mixin counter(title, number)
  .counter
    span.counter-number= number
    span.counter-symbol +
    span.counter-title= title