section.footer.context-dark#contacts-anchor
  .container
  
    .footer-grid

      .footer-grid__item-col1.footer-box

        h3.title-secondary.footer-box__title
          | Location
        ul.footer-location.footer-box__body
          li.footer-location__item
            | 1418 Riverwood Drive,
          li.footer-location__item
            | Suite 3845 Cottonwood,
          li.footer-location__item
            | CA 96022
          li.footer-location__item
            | United States

      .footer-grid__item-col2.footer-box

        h3.title-secondary.footer-box__title
          | Contacts
        .footer-box__body.footer-contacts
          .footer-contacts__item
            span.footer-contacts__text 
              | Ph.
            a.footer-contacts__link(href="tel:#")
              | 1-300-123-1234
          .footer-contacts__item
            span.footer-contacts__text 
              | Mail.
            a.footer-contacts__link(href="mailto:#")
              | Info@demolink.org
        ul.footer-social.footer-box__bottom
          each network in ["facebook", "instagram", "twitter", "youtube"]
            li.footer-social__item
              a(class="footer-social__btn " + "icon-" + network, href="#")

      .footer-grid__item-col3.footer-box

        h3.title-secondary
          | Newsletter
        form.footer-form.footer-box__form(action="'Oppps'" method="post")
          .input-box
            .input-box__icon.ico-mail
            input.input-box__input.footer-form__text(
              type="email"
              name="email"
              id="footer-email"
            )
            label.input-box__placeholder.input-box__placeholder--focus.footer-form__text(for="footer-mail")
              | E-mail
          button.btn.footer-form__btn(type="submit" onclick="return false")
            | Subscribe
  
